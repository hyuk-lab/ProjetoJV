<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="796.0" prefWidth="777.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.421" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectavaliacao.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="73.0" prefWidth="737.0" spacing="20.0">
         <children>
            <Label text="N° da Conta:">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <TextField fx:id="txtConta" prefHeight="44.0" prefWidth="544.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="73.0" prefWidth="737.0" spacing="20.0">
         <children>
            <Label text="Nome do Titular:">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <TextField fx:id="txtTitular" prefHeight="44.0" prefWidth="544.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="30.0" layoutY="123.0" prefHeight="73.0" prefWidth="737.0" spacing="50.0">
         <children>
            <RadioButton fx:id="rbCorrente" mnemonicParsing="false" onAction="#onSelecionarTipo" onMouseClicked="#onSelecionarTipo" text="Corrente">
               <font>
                  <Font size="20.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="grpTipo" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbEspecial" layoutX="335.0" layoutY="38.0" mnemonicParsing="false" onAction="#onSelecionarTipo" onMouseClicked="#onSelecionarTipo" text="Especial" toggleGroup="$grpTipo">
               <font>
                  <Font size="20.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="rbPoupanca" layoutX="389.0" layoutY="38.0" mnemonicParsing="false" onAction="#onSelecionarTipo" onMouseClicked="#onSelecionarTipo" text="Poupança" toggleGroup="$grpTipo">
               <font>
                  <Font size="20.0" />
               </font>
            </RadioButton>
         </children>
      </HBox>
      <VBox prefHeight="149.0" prefWidth="737.0">
         <children>
            <Label text="Limiite:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="txtLimite" disable="true" onMouseClicked="#onSelecionarTipo">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Label text="Dia do Vencimento:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="txtVencimento" disable="true" onMouseClicked="#onSelecionarTipo">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#onCadastrarConta" prefHeight="44.0" prefWidth="731.0" text="Cadastrar">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <HBox prefHeight="67.0" prefWidth="737.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onDepositar" prefHeight="44.0" prefWidth="133.0" text="Depositar">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <TextField fx:id="txtValor" prefHeight="44.0" prefWidth="513.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#onSacar" prefHeight="44.0" prefWidth="119.0" text="Sacar">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="27.0" prefWidth="737.0" spacing="25.0">
         <children>
            <Label text="Saldo:">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <Label fx:id="lblSaldo" alignment="CENTER" layoutX="10.0" layoutY="10.0" text="0.00">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="30.0" prefWidth="737.0" spacing="25.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onPesquisar" prefHeight="38.0" prefWidth="123.0" text="Pesquisar">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <TextField fx:id="txtPesquisa" prefHeight="38.0" prefWidth="230.0" />
         </children>
      </HBox>
      <TextArea fx:id="txtDados" prefHeight="277.0" prefWidth="737.0" />
   </children>
</VBox>
